<h1>Wines</h1>

<table class="table table-sm">
  <thead>
    <tr>
      <th>Name</th>
      <th>Strains</th>
      <th>Grades</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @wines.order('name').each do |wine| %>
      <tr>
        <td><%= wine.name %></td>
        <td><%= wine.strain_percentage%></td>
        <td><%= wine.oenologist_wines.collect(&:grade).join(', ')%></td>
        <td><%= link_to 'Show', wine %></td>
        <td><%= link_to 'Edit', edit_wine_path(wine) %></td>
        <td><%= link_to 'Destroy', wine, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Wine', new_wine_path %> | 
<%= link_to 'Strains', strains_path %> |
<%= link_to 'Oenologists', oenologists_path %> |
<%= link_to 'Magazines', magazines_path %> |
<% if user_signed_in? %>
    <%= link_to "Logout", destroy_user_session_path, method: :delete ,class:"btn btn-light btn-sm ml-2" %>
<% end %>
