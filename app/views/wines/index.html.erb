<p id="notice"><%= notice %></p>

<h1>Wines</h1>

<table class="table table-sm">
  <thead>
    <tr>
      <th style="width: 18%">Name</th>
      <th style="width: 35%">Strains</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @wines.order('name').each do |wine| %>
      <tr>
        <td><%= wine.name %></td>
        <td><%= wine.strain_percentage%></td>
        <td style="width: 5%"><%= link_to 'Show', wine %></td>
        <td style="width: 5%"><%= link_to 'Edit', edit_wine_path(wine) %></td>
        <td style="width: 5%"><%= link_to 'Destroy', wine, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

