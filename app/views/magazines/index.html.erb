<p id="notice"><%= notice %></p>

<h1>Magazines</h1>

<table class="table table-sm">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @magazines.each do |magazine| %>
      <tr>
        <td><%= magazine.name %></td>
        <td><%= link_to 'Show', magazine %></td>
        <td><%= link_to 'Edit', edit_magazine_path(magazine) %></td>
        <td><%= link_to 'Destroy', magazine, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Magazine', new_magazine_path %> |
<%= link_to 'Wines', wines_path %> |
<%= link_to 'Strains', strains_path %> |
<%= link_to 'Oenologists', oenologists_path %> |
<% if user_signed_in? %>
    <%= link_to "Logout", destroy_user_session_path, method: :delete ,class:"btn btn-light btn-sm ml-2" %>
<% end %>
