<p id="notice"><%= notice %></p>

<h1>Oenologists</h1>

<table class="table table-sm">
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Nationality</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @oenologists.each do |oenologist| %>
      <tr>
        <td><%= oenologist.name %></td>
        <td><%= oenologist.age %></td>
        <td><%= oenologist.nationality %></td>
        <td><%= link_to 'Show', oenologist %></td>
        <td><%= link_to 'Edit', edit_oenologist_path(oenologist) %></td>
        <td><%= link_to 'Destroy', oenologist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Oenologist', new_oenologist_path %> |
<%= link_to 'Wines', wines_path %> |
<%= link_to 'Strains', strains_path %> |
<%= link_to 'Magazines', magazines_path %> |
<% if user_signed_in? %>
    <%= link_to "Logout", destroy_user_session_path, method: :delete ,class:"btn btn-light btn-sm ml-2" %>
<% end %>
